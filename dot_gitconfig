[user]
	email = 105173090+gpspence@users.noreply.github.com
	name = gpspence
[color]
	ui = true
[core]
	autocrlf = input  # convert CRLF -> LF on checkout (prevent Windows line endings entering repo)
	safecrlf = true  # prevent/ warn about line-ending conversions
[alias]
	c = commit
	s = status
	st = status
	last = log -1 HEAD  # show last commit
	f = push --force-with-lease  # safer "force push"
	ss = "!f() { git stash show stash^{/$*} -p; }; f"  # show a stash patch by matching a string
	# e.g. git ss WIP shows the stash whose description contains “WIP”
  	sa = "!f() { git stash apply stash^{/$*}; }; f"  # apply a stash by matching a string
  	sl = stash list
	lg = lg1
	lg1 = lg1-specific --all
	lg2 = lg2-specific --all
	lg3 = lg3-specific --all
	lg1-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
	lg2-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
	lg3-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset) %C(bold cyan)(committed: %cD)%C(reset) %C(auto)%d%C(reset)%n''          %C(white)%s%C(reset)%n''          %C(dim white)- %an <%ae> %C(reset) %C(dim white)(committer: %cn <%ce>)%C(reset)'
[merge]
	tool = nvim -d
[pull]
	ff = only  # use git fetch and git rebase or merge manually when needed
[push]
	default = simple
[help]
	autocorrect = prompt
[url "git@github.com:"]
	insteadOf = gh:  # replace gh with the github url
[github]
	user = gpspence
[diff]
	algorithm = histogram
	indentHeuristic = true
[protocol]
	version = 2
[init]
	defaultBranch = main
[filter "lfs"]
	required = true  # error if LFS filter isn't available
	clean = git-lfs clean -- %f  # when committing, replace large file content with LFS pointers
	smudge = git-lfs smudge -- %f  # when checking out, replace filters with real file content
	process = git-lfs filter-process  # newer, more efficient interface
